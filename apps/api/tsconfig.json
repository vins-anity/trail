{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "paths": {
            "shared": ["../../packages/shared/dist/index.d.ts"],
            "@api/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "../../packages/shared"
        }
    ]
}
